<%= 'Clientes' %>
<%= link_to 'Productos', productos_path %>
<%= link_to 'Facturas', facturas_path %>
<h1>Listado de clientes</h1>
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Comentarios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.numero %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.apellidos %></td>
        <td><%= cliente.comentarios %></td>
        <td><%= link_to (t '.edit'), edit_cliente_path(cliente) %></td>
        <td><%= link_to (t '.destroy'), cliente, method: :delete, data: { confirm: 'Â¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_cliente_path %>
